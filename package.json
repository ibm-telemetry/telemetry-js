{
  "name": "@ibm/telemetrics-js",
  "description": "JavaScript telemetry tooling for open/inner source projects",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "author": "IBM",
  "keywords": [
    "ibm",
    "telemetry",
    "metrics",
    "opentelemetry",
    "javascript",
    "typescript"
  ],
  "homepage": "https://github.com/carbon-design-system/telemetrics-js#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/carbon-design-system/telemetrics-js.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/telemetrics-js/issues"
  },
  "type": "module",
  "bin": {
    "ibmtelemetrics": "./dist/index.js"
  },
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "scripts": {
    "build": "tsc",
    "build:schema": "ts-json-schema-generator --path ./src/schemas/Schema.ts --type Schema > src/schemas/telemetrics-config.schema.json",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "prepare": "husky install",
    "test": "vitest --coverage",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/resources": "^1.15.2",
    "@opentelemetry/sdk-metrics": "^1.15.2",
    "@opentelemetry/semantic-conventions": "^1.15.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.46.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-json-schema-generator": "^1.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}
