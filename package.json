{
  "name": "@ibm/telemetry-js",
  "description": "JavaScript telemetry tooling for open/inner source projects",
  "version": "0.2.0",
  "license": "Apache-2.0",
  "author": "IBM",
  "keywords": [
    "ibm",
    "telemetry",
    "metrics",
    "opentelemetry",
    "javascript",
    "typescript"
  ],
  "homepage": "https://github.com/ibm-telemetry/telemetry-js#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ibm-telemetry/telemetry-js.git"
  },
  "bugs": {
    "url": "https://github.com/ibm-telemetry/telemetry-js/issues"
  },
  "type": "module",
  "bin": {
    "ibmtelemetry": "./dist/main/index.js"
  },
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "scripts": {
    "build": "tsc",
    "build:schema": "ts-json-schema-generator --path ./src/schemas/Schema.ts --type Schema > src/schemas/telemetry-config.schema.json",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "prepare": "husky install",
    "test": "vitest run --coverage",
    "test:watch": "vitest --coverage"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/resources": "^1.17.1",
    "@opentelemetry/sdk-metrics": "^1.17.1",
    "@opentelemetry/semantic-conventions": "^1.17.1",
    "ajv": "^8.12.0",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "object-scan": "^19.0.5",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.5.4",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/js-yaml": "^4.0.6",
    "@types/lodash": "^4.14.199",
    "@types/node": "^18.18.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.3.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-json-schema-generator": "^1.3.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
