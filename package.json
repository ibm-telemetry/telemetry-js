    "js-yaml": "^4.1.0",
    "lint-staged": "^14.0.1",
    "lodash": "^4.17.21",
    "object-scan": "^19.0.5",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
