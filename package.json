{
  "name": "@ibm/telemetry-js",
  "description": "JavaScript telemetry tooling for open/inner source projects",
  "version": "1.1.0",
  "license": "Apache-2.0",
  "author": "IBM",
  "keywords": [
    "ibm",
    "telemetry",
    "metrics",
    "opentelemetry",
    "javascript",
    "typescript"
